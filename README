git clone --recurse-submodules https://github.com/ericjuma/ongoma.git

Ubuntu build

    sudo apt install libasound2-dev libjack-jackd2-dev libx11-dev build-essential -y

    git clone https://github.com/juce-framework/JUCE.git src/JUCE
    git clone https://github.com/Tracktion/tracktion_engine.git src/trackion_engine

    cmake -B build -S .
    cmake --build build
    ./build/OngomaJUCE
